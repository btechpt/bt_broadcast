<odoo>
    <data>
        <record model="ir.ui.view" id="bt_broadcast.list">
            <field name="name">Broadcast</field>
            <field name="model">bt_broadcast.broadcast</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="is_notification"/>
                    <field name="type_notification"/>
                    <field name="type_recevier"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="bt_broadcast.form">

            <field name="name">Form Broadcast</field>
            <field name="model">bt_broadcast.broadcast</field>
            <field name="arch" type="xml">
                <form string="Form Broadcast">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <group>
                                    <field name="is_notification"/>
                                </group>
                                <group>
                                    <field name="type_notification"/>
                                </group>
                            </group>
                            <group>
                                <field name="type_recevier" widget="radio"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" widget="html"/>
                            <field name="email"/>
                            <field name="specific_users" widget="many2many_tags"/>
                            <field name="department_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="bt_broadcast.action_broadcast">
            <field name="name">Broadcast</field>
            <field name="res_model">bt_broadcast.broadcast</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Broadcast" id="bt_broadcast.menu_root" active="True" sequence="3"/>
        <!-- menu categories -->
        <menuitem name="Broadcast"
                  id="bt_broadcast.menu_broadcast"
                  parent="bt_broadcast.menu_root"
                  action="bt_broadcast.action_broadcast"
                  sequence="1"
        />
        <!--
            <menuitem name="Menu 1" id="bt_broadcast.menu_1" parent="bt_broadcast.menu_root"/>
            <menuitem name="Menu 2" id="bt_broadcast.menu_2" parent="bt_broadcast.menu_root"/>
        -->
        <!-- actions -->
